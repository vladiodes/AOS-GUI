                "for(int i=0;i<state.grid.size(); i++)",
                "{",
                "   __moduleResponseStr[i] = state__.grid[i] == eX ? 'X' : state__.grid[i] == eO ? 'O' : '?';",
                "}",
                "__reward = 0;"
            ] 
        }
        ]
    }
