<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.chart.BubbleChart?>
<VBox spacing="10" xmlns:fx="http://javafx.com/fxml/1" stylesheets="@../style.css" fx:controller="frontend.finalproject.Controllers.ManualActionRequestController">
<children>
    <Pane prefHeight="139.0" style="-fx-background-color: #2D75E8;" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <children>
            <Label layoutX="73.0" layoutY="30.0" text="Send manual action to robot request" textFill="WHITE">
                <font>
                    <Font size="48.0" />
                </font>
            </Label>
        </children>
    </Pane>
    <BorderPane>
        <left>
            <VBox fx:id="AvailableActionsVBOX" styleClass="ManActionsVBOX" prefWidth="450" spacing="10">
                <Label styleClass="Separator_Text"  text="Solver actions" />
            </VBox>
        </left>
        <right>
            <VBox prefWidth="450" spacing="10" styleClass="ManActionsVBOX" fx:id="ActionsSentVBOX">
                <Label styleClass="Separator_Text"  text="Actions sent to robot" />
            </VBox>
        </right>
        <center>
                    <HBox spacing="10"
                          style="-fx-padding: 50 0 0 0;
                        -fx-alignment: center">
                        <Label styleClass="TextFieldLabel" text="Action ID" />
                        <TextField styleClass="TextFieldForm" fx:id="ActionIDTxt"/>
                    </HBox>
        </center>
        <bottom>
            <HBox styleClass="CreateProjBTNsHBox">
                <Button onAction="#handleBackBTNClick" styleClass="formBtn" text="Back" />
                <Button styleClass="formBtn" text="Send request" onAction="#handleSendRequestBTN" />
                <Button styleClass="formBtn" text="Delete all sent actions" onAction="#handleDeleteActionsBTN"/>
            </HBox>
        </bottom>
    </BorderPane>
</children>
</VBox>
